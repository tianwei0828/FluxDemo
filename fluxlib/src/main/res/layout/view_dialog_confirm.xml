<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitle"
        style="@style/CommonTitleTextTheme"
        android:layout_width="match_parent"
        android:layout_height="@dimen/confirm_dialog_title_height"
        android:gravity="center"
        android:text="我是title" />

    <ImageView
        style="@style/CommonDividedLineTheme"
        android:layout_alignParentBottom="true" />

    <TextView
        android:id="@+id/tvContent"
        style="@style/CommonBlackTextTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_padding" />

    <ImageView
        style="@style/CommonDividedLineTheme"
        android:layout_alignParentBottom="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/confirm_dialog_btn_height"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCancel"
            style="@style/CommonBlackTextTheme"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_common_item"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/cancel" />

        <View
            android:id="@+id/moulding"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorDividedLine" />

        <TextView
            android:id="@+id/tvOk"
            style="@style/CommonTextTheme"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_common_item"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/ok"
            android:textColor="@color/colorCommonBtnBgBlue" />
    </LinearLayout>
</LinearLayout>